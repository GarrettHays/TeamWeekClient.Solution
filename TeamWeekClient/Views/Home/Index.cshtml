@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-4">
  <div class="h-100 d-flex flex-column align-items-center">
    <h1 class="text-center my-4">Welcome to our Game!</h1>
  </div>
  <div class="d-flex flex-row justify-content-center my-4">    
    <ol>
      @foreach (Animal animal in Model)
      {
        <ul>
          <li>ID: @animal.AnimalId</li>
          <li>Username: @animal.Image </li>
          <li>Name: @animal.Name </li>
          <li>Comment: @animal.HP </li>
          <li>Posted: @animal.Attack</li>
        </ul>
        <p>@Html.ActionLink("View Details", "Details", new { id = @animal.AnimalId})</p>
      }
    </ol>
  </div>
</div>



